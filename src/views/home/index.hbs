<div id="carouselExampleSlidesOnly" class="carousel slide" data-interval="3000" data-ride="carousel"
     style="height: 100%">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    </ol>
    <div class="carousel-inner" style="height: 100%">
        <div class="carousel-item active" style="height: 100%">
            <img class=" d-block w-100" src="/images/front.jpg" alt="First slide">
            <div class="carousel-caption">
                {{#if login}}
                    <h1 id="slogan">Welcome, {{login}}</h1>
                {{else}}
                    <h1 id="slogan">Brand New Shopping Experience</h1>
                    <p></p>
                    <button type="button" class="btn button-square btn-outline-warning btn-lg"
                            onclick="location.href='/user/login'">Login
                    </button>
                    <button type="button" class="btn btn-outline-warning button-square btn-lg"
                            onclick="location.href='/user/signup'">Sign Up
                    </button>
                {{/if}}

            </div>
        </div>
    </div>

</div>

