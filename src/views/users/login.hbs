<div  id="log-form" class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-md-6">
        <h1>Login</h1>
        {{#if message}}
            <div class="alert alert-danger">
                {{message}}
            </div>
        {{/if}}
        <form action="/user/login" method="POST" class="clearfix">
            <div class="form-group">
                <label for="username">User ID</label>
                <input type="text" id="username" name="username" placeholder="your user id" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="your password" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-outline-primary pull-right">Login</button>
        </form>
        <p></p>
        <p class="pull-right">Haven't sign up? <button type="button" class="btn btn-outline-primary pull-right" onclick="location.href='/user/signup'">Sign Up</button></p>

    </div>
</div>
</div>
<div id="page-space"></div>