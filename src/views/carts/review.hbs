<div id="all-form" class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-12">
            <div class="panel panel-default">

                <table class="table">
                    <thead class="thead-light">
                    <tr>
                        <th>User</th>
                        <th>Review</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{# each data}}
                        <tr>
                            <th scope="row">{{this.user_id}}</th>
                            <td>{{this.reviews}}</td>
                        </tr>

                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>